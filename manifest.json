{
    "manifest_version": 2,
  
    "name": "GitTalkin",
    "description": "This extension will help developers",
    "version": "1.0",
  
    "browser_action": {
     "default_icon": "logo.png",
     "default_popup": "popup.html"
    },
    "permissions": [
     "activeTab"
     ], 
    "content_security_policy": "script-src 'self' https://cdnjs.cloudflare.com/ajax/libs/annyang/2.6.0/annyang.min.js; object-src 'self'",
    "background": {
    	"scripts": ["./auto-trigger.js"],
    	"persistent": false
  	}

  }